<div class="col-12 container-white mt-2">
        <h2>HOTELS</h2>
          <div id="hotel-space">
            <div class="listtogglehotels">
              <% if @concert.hotels.empty? %>
                <p>No hotels yet</p>
              <% else %>
                <% @concert.concert_hotels.each_with_index do |concert_hotel, index| %>
                  <div class="d-flex align-items-center">
                    <div class="hotels-infos m-2 d-flex align-items-center justify-content-between">
                      <div>
                        <p class="mb-0"><strong> <%= concert_hotel.hotel.name %></strong></p>
                        <p class="mb-0"> <%= concert_hotel.hotel.address %> </p>
                        <p class="mb-0"> <%= concert_hotel.hotel.city %> (<%= concert_hotel.hotel.country %>)</p>
                      </div>
                      <div class="me-4 transports-emoji-links">
                        <%= link_to raw('<i class="fa-solid fa-minus open-plus-icon"></i>'), tour_concert_concert_hotel_path(@tour, @concert, concert_hotel),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
                      </div>
                    </div>


                    <div class="d-flex align-items-center m-2">
                        <div class="text-center  user-hotel-list-new d-flex align-items-center">
                          <a href="#" data-action="click->concert#openModalTwo" data-index="<%= index %>" class="button-green" >CREW MEMBERS</a>
                        </div>
                        <%= render partial: 'hotel_users', locals: { tour: @tour, concert: @concert, index: index, concert_hotel: concert_hotel } %>

                    </div>
                  </div>
                <% end %>

              <% end %>
            </div>
            <div class="text-center mt-3">
              <a href="#" data-action="click->concert#openModalThree" ><i class="fas fa-plus open-plus-icon-timetable"></i></a>
            </div>
            <%= render partial: 'new_hotel', locals: { tour: @tour, concert: @concert } %>
          </div>
      </div>

 <div class="col-12 container-white mt-2">
        <div class="d-flex align-items-center justify-content-between">
          <h2>GUEST LIST</h2>
          <h3>TOTAL: <%=  @guest_lists.count%> Guests</h3>
        </div>
          <%= simple_form_for [@tour, @concert, @guest_list] do |f| %>
            <div class="d-flex mb-2 align-items-center">
              <%= f.input :name, label: false, placeholder: "Name", input_html: {class: 'form-input' }%>
              <%= f.submit "ADD GUEST", class:"button-green me-2 mb-3 ms-3" %>
            </div>
            <% end %>

          <% if @guest_lists.present? %>
            <div class="listtogglecheckboxes ">
              <% @guest_lists.each_with_index do |guest_list, index| %>
                <div class="guest-list d-flex justify-content-between align-items-center">
                  <p class="m-0"><%= guest_list.name %></p>
                  <%= link_to raw('<i class="fa-solid fa-minus open-plus-icon"></i>'), tour_concert_guest_list_path(@concert, @tour, guest_list), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="m-0"> No guests yet</p>
          <% end %>

</div>

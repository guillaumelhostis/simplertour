<div class="homepage-container d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="homepage-elements">
    <div class="mb-3">
      <h1>LOG IN CREW MEMBER</h1>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <div class="col-lg-6">
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: 'form-input' } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password",class: 'form-input'  } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "LOG IN", class: "button-green" %>
          </div>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<div class="homepage-container d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="homepage-elements">

  <div class="mb-3">
    <h1>FORGOT YOUR PASSWORD?</h1>
  </div>

  <div class="col-12">

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class:"form-input"  } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "SEND ME PASSWORD INSTRUCTIONS", class: "button-green" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>

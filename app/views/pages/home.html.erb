<div class="homepage-container">
  <div class="homepage-elements d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="homepage-speech ">
      <h2>START YOUR JOURNEY</h2>

    <div data-controller="home">
      <div id="myModal" class="modal" data-home-target="modal">
        <div class="modal-content">
          <!-- Modal content goes here -->
          <span class="close" data-action="click->home#closeModal"><i class="fas fa-times black-icon"></i></span>

            <div class="mb-3">
              <%= link_to "SIGN IN AS A TOUR MANAGER", new_tourman_registration_path, class: "button-green" %>
            </div>

            <div class="mb-3">
              <%= link_to "SIGN IN AS A CREW MEMBER", new_user_registration_path, class: "button-green" %>
            </div>
        </div>
      </div>
      <% if !tourman_signed_in?  && !user_signed_in?%>
        <div class="d-flex justify-content-center">
          <a href="#" class="button-green" data-action="click->home#openModal">CREATE ACCOUNT</a>
        </div>
      <% end %>
    </div>
  </div>





</div>

<div class="container text-center">
  <h1>SIMPLER TOUR HOME</h1>

    <% if user_signed_in? %>
      <h3>User links</h3>
        <%= link_to "Sign out", destroy_user_session_path, 'data-turbo-method': :delete %>
        <%= link_to "Edit registration", edit_user_registration_path %>
    <% elsif !tourman_signed_in? %>
      <h3>User links</h3>
        <%= link_to "Sign up", new_user_registration_path %>
        <%= link_to "Login", new_user_session_path %>
    <% end %>


    <% if tourman_signed_in? %>
      <h3>Tourman links</h3>
        <%= link_to "Sign out", destroy_tourman_session_path, 'data-turbo-method': :delete %>
        <%= link_to "Edit registration", edit_tourman_registration_path %>
    <% elsif !user_signed_in? %>
      <h3>Tourman links</h3>
        <%= link_to "Sign up!", new_tourman_registration_path %>
        <%= link_to "Login", new_tourman_session_path %>
    <% end %>

  <div class="liens">
    <h3>Pages links</h3>
      <%= link_to "Home", root_path %>
      <%= link_to "Users", pages_user_path %>
      <%= link_to "Tourman", pages_tourman_path %>
  </div>
</div>


<h1 class="mb-2">NEW TOUR</h1>


    <%= simple_form_for(@tour) do |f| %>


        <%= f.input :title, :label => "Tour Name", label: false,
                          placeholder: "Tour Name", input_html: { class: 'form-input' }%>
        <%= f.input :artist, :label => "Artist Name", label: false,
                          placeholder: "Artist Name", input_html: { class: 'form-input' }%>
        <%= f.input :genre, :label => "Genre",                         label: false,
                          placeholder: "Genre", input_html: { class: 'form-input' } %>
        <%= f.input :starting, :label => "Starting",
                          placeholder: "Starting", input_html: { class: 'form-input' }%>
        <%= f.input :ending, :label => "Ending",
                          placeholder: "Ending", input_html: { class: 'form-input' } %>

        <%= f.input :picture, as: :file,
                label: "Upload a picture for your tour:",

                prompt: "Profile Picture",
                input_html: { class: 'form-input', onchange: 'updateFileName(this)' } %>

        <%= f.submit "NEW TOUR", class: "button-green"%>

    <% end %>

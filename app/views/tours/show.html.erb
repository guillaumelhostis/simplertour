<div class="body-large-container">
  <div class="d-flex justify-content-between">
    <div class="d-flex mb-4 tour-titles col-7">
      <div class="me-5">
        <h1><%= @tour.title.upcase %></h1>
        <h2><%= @tour.artist.upcase%></h2>
      </div>
      <div class="tour-card-img-square ms-2">
        <%= image_tag(@tour.picture) if @tour.picture.attached? %>
        <% unless @tour.picture.attached? %>
        <%= image_tag "https://static.vecteezy.com/ti/gratis-vector/p3/7319933-black-avatar-person-icons-user-profile-icon-vector.jpg", class: "avatar" %>
        <% end %>
      </div>
    </div>
    <div class="container-transparent col-4 ms-5">
      <li class="list-unstyled d-flex align-items-center ms-5"><div class="red-circle ms-5"></div><p class="m-0"> Not started</p></li>
      <li class="list-unstyled d-flex align-items-center ms-5"><div class="orange-circle ms-5"></div><p class="m-0"> Work in progress</p></li>
      <li class="list-unstyled d-flex align-items-center ms-5"><div class="green-circle ms-5"></div><p class="m-0"> All good</p></li>
      <li class="list-unstyled d-flex align-items-center ms-5"> <div class="grey-circle ms-5"></div><p class="m-0">Past</p> </li>
    </div>
  </div>

  <div class="container-transparent mb-5" data-controller="dashboard" >
    <div id="calendar-container" data-dashboard-target="calendar" data-concert-dates="<%= @concert_dates.to_json %>" data-concert-index="<%= @concert_index.to_json%>" data-tour-index="<%= @tour.id.to_json%>" data-concert-status="<%= @concert_status.to_json%>">
      <div id="calendar" ></div>
    </div>
  </div>
  <div class="container-transparent  tour-titles mt-4" data-controller="flatpickr" >
    <div class="d-flex align-items-center">
      <h2 class="m-0">ADD A NEW SHOW</h2>
      <div class="d-flex align-items-center ms-4">
        <a href="#" data-action="" class="button-green" >CREATE FROM TEMPLATE</a>
      </div>
    </div>
    <div class="col-8 mt-3 mb-4">
      <%= form_for [@tour, Concert.new] do |f| %>
        <div class="d-flex ">
          <%= f.date_field :date, label: false, placeholder: "Date", class: 'form-input me-4'  %>
          <%= f.text_field :location, label: false, placeholder: "Ville", class: "form-input"%>
          <%= f.text_field :name, label: false, placeholder: "Salle", class: "form-input ms-4" %>
          <%= f.submit "CREATE SHOW", class: "button-green ms-4" %>
        </div>
      <% end %>
    </div>
    <div class="mt-4">
      <h2 class="m-0">TODAY'S SHOW</h2>
      <div class="mt-3">
        <% @today_concerts.each do |today_concert| %>
          <div class="col-8">
            <div class="user-today-show-card">
              <div class="user-today-show-card-img">
                <%= image_tag(@tour.picture) if @tour.picture.attached? %>
                <% unless @tour.picture.attached? %>
                  <%= image_tag "https://static.vecteezy.com/ti/gratis-vector/p3/7319933-black-avatar-person-icons-user-profile-icon-vector.jpg", class: "avatar" %>
                <% end %>
              </div>
              <div class="user-today-show-card-content">
                <h2><%= today_concert.name.upcase %> - <%= today_concert.location.upcase %></h2>
                <div class="d-flex align-items-center mb-3">
                  <h3><%= @tour.title.upcase%> - <%= @tour.artist.upcase %></h3>
                </div>
                <div class="mb-3">
                  <%= link_to "ROADBOOK PDF", "#" , class: "button-green" %>
                  <%= link_to "ALL INFOS", tour_concert_path(today_concert, @tour), class: "button-green" %>
                </div>
                <div class="d-flex align-items-center mb-3 mt-4">
                    <h3 class="mb-0">SHOW STATUS:</h3>
                    <% case today_concert.status_name %>
                      <% when "Not Started" %>
                        <div class="red-circle ms-2"></div>
                      <% when "On Going" %>
                        <div class="orange-circle ms-2"></div>
                      <% when "All Good" %>
                        <div class="green-circle ms-2"></div>
                      <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

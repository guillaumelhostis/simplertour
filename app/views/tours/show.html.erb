<h2><%= @tour.title %></h2>
<p><%= @tour.artist%></p>
<p><%= @tour.genre %></p>


<h2>Crew <%= link_to "Edit Crew", crew_path(@crew) %></h2>
<ul>
  <% @crew_users.each do |member| %>
    <li><%= member.first_name %> - <%= member.user_role_in_team(@crew, member)%> </li>
  <% end %>
</ul>



<h2>Concerts:</h2>
<ul>
  <% @concerts.each do |concert| %>
    <li><%= concert.date %> - <%= concert.location %></li>
  <% end %>
</ul>

<h2>Create New Concert:</h2>
<%= form_for [@tour, Concert.new] do |f| %>
  <%= f.label :date %>
  <%= f.date_field :date %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.submit "Create Concert" %>
<% end %>







<% if policy(@tour).edit? %>
  <%= link_to "Edit this tour", edit_tour_path(@tour) %>
<% end %>
<%= button_to "Destroy this tour", @tour, method: :delete if policy(@tour).destroy?%>
